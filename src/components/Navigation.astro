      sections.map((section) => (
        <li>
          <a
            href={`/section/${section.id}`}
            class="block hover:bg-gray-700 p-2 rounded"
          >
            <div class="font-saira font-bold uppercase tracking-widest text-sm">Section {section.id}</div>
