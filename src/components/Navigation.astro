  { id: 3, title: "Secondary - Overhead" },
  { id: 4, title: "Services - Overhead and Underground" },
  { id: 5, title: "Guying and Anchoring" },
  { id: 6, title: "Poles and Arms" },
  { id: 7, title: "Transformers - Poles, Padmounted, Pads" },
  { id: 8, title: "Power Capacitors and Regulators" },
  { id: 9, title: "Switches, Reclosers, and Sectionalizers" },
